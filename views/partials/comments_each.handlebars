<div class="comments_area">
  {{#each comments}}
    <div class="comment {{this._id}}">
      <img src="../../images/default.jpeg" alt="" class="comment_part-1" />
      <div class="comment_part-2">
        <div class="user_info">
          <div class="user_name">{{this.user_name}}</div>
          <span class="date">{{this.date}}</span>
        </div>
        <div class="comment_text">
          {{this.content_comment}}
        </div>
      </div>
    </div>
  {{/each}}
</div>